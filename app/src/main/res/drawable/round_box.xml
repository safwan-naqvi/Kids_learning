<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#F44336">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#7C270C" />
            <corners android:topLeftRadius="@dimen/_15sdp"
                android:bottomLeftRadius="@dimen/_15sdp"
                android:topRightRadius="@dimen/_15sdp"
                android:bottomRightRadius="@dimen/_15sdp"/>
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/colorButtonPrimary"
                android:startColor="#B85824"
                android:type="linear" />
            <corners android:topLeftRadius="@dimen/_15sdp"
                android:bottomLeftRadius="@dimen/_15sdp"
                android:topRightRadius="@dimen/_15sdp"
                android:bottomRightRadius="@dimen/_15sdp"/>
        </shape>
    </item>
</ripple>