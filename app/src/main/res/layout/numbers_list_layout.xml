<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/constrain_numbers"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/number_digit_icon"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/number_digit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/crayone"
        android:letterSpacing="0.5"
        android:text="Zero"
        android:textAllCaps="true"
        android:textColor="@color/colorButtonPrimary"
        android:textSize="64sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_digit_icon"
        android:layout_marginTop="32dp"/>


    <ImageView
        android:id="@+id/number_hand_icon"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/one"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_digit_text" />

</androidx.constraintlayout.widget.ConstraintLayout>