<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/alpha_container"
    android:gravity="center"
    android:padding="5dp"
    android:layout_marginBottom="16dp"
    android:layout_width="200dp"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/alphabet_thing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/alpha1" />

    <TextView
        android:id="@+id/alphabet_thing_speak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/crayone"
        android:text="Apple"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/alphabet_thing"
        app:layout_constraintStart_toStartOf="@+id/alphabet_thing"
        app:layout_constraintTop_toBottomOf="@+id/alphabet_thing" />

</LinearLayout>